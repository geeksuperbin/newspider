	<script type="text/javascript">
		function remarkFlaw(){
			var val = $("#remarkContent").val();
			if(val == ""){
				return false;
			}
			$("#post_form_inline").submit();
		}
		function displayReply(trId) {
			if(!$("#sessionUserId").val()) {
	         	document.forms[0].action='/TUser/login';
	    		document.forms[0].submit();
			 } else {
				 var replyObj = document.getElementById(trId + "reply")
		        	if(!replyObj) {
						var trObj = $('#' + trId);
						var str = "<p id='"+trId+"reply' class='replyP'><textarea class='box' cols='50' rows='2' name='reply'></textarea><br/><a href='javascript:void(0);' class='btn b_28_1' onClick='addReply(" + trId.substring(2) + ")'><span>立即回复</span></a>&nbsp;&nbsp;<a href='javascript:void(0);' onclick='cancelReply(this)'>取消</a></p>"
						trObj.after(str);
		            }
			 }
        }
		function cancelReply(aObj) {
			$("#parentCommentId").val('');
			var trObj = $(aObj).parent();
			trObj.remove();
        }
		function concernFlaw(flawId) {
	         if(!$("#sessionUserId").val()) {
	         	document.forms[0].action='/TUser/login';
	    		document.forms[0].submit();
			 } else {
				$('#concernInfo').load("/flawConcern/concernFlaw?t="+new Date().getTime()+"&flawId="+flawId);
			 }
       }
	   function addReply(value){
		   	$("#parentCommentId").val(value);
			var v = $("textarea[name=reply]").val();
			if(v==''){return false;}else{$("#post_form_inline").submit();}
		}
	   		
	</script>
	<script type="text/javascript">
		$(document).ready(function() {
			/*
			 *  Simple image gallery. Uses default settings
			 */
			$(".showInfo").click(function(){
				$("#showDiv").show();
			});
			
			$(".showInfo").fancybox({
				centerOnScroll:true,
				href:'#showDiv',
				overlayOpacity:0,
				padding:0,
				margin:0,
				onClosed:function(){
					$("#showDiv").hide();
				}
			});
			var msg = "";
			if(msg.length > 0){window.location.href="#comment";}
		});
	</script>
