	<script type="text/javascript">
		$(function(){
			$(window).scroll(function(){
				var scrollTop = $(document).scrollTop();
				if(scrollTop > 0){
					$(".top_btn").show();
				}else{
					$(".top_btn").hide();
				}
			});
			$(".topLink").click(function(){
				$('body,html').animate({scrollTop:0},1000);
			});
		});
	</script>
